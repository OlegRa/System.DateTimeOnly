<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard20;netstandard21;net461;net5;net6</TargetFrameworks>
    <AssemblyOriginatorKeyFile>..\DateTimeOnly.snk</AssemblyOriginatorKeyFile>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
    <AllowUnsafeBlocks>False</AllowUnsafeBlocks>
    <ImplicitUsings>false</ImplicitUsings>
    <RootNamespace>System</RootNamespace>
    <AnalysisLevel>latest</AnalysisLevel>
    <SignAssembly>true</SignAssembly>
    <LangVersion>latest</LangVersion>
    <WarningLevel>5</WarningLevel>
    <Nullable>enable</Nullable>
    <NoWarn>436;NU5128</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <!--<GenerateCompatibilitySuppressionFile>true</GenerateCompatibilitySuppressionFile>-->
    <EnableStrictModeForCompatibleFrameworksInPackage>true</EnableStrictModeForCompatibleFrameworksInPackage>
    <EnableStrictModeForCompatibleTfms>true</EnableStrictModeForCompatibleTfms>
    <EnablePackageValidation>true</EnablePackageValidation>
  </PropertyGroup>

  <PropertyGroup>
    <PackageProjectUrl>https://github.com/OlegRa/System.DateTimeOnly</PackageProjectUrl>
    <Description>DateOnly and TimeOnly types for .NET versions before 6.0</Description>
    <RepositoryUrl>https://github.com/OlegRa/System.DateTimeOnly</RepositoryUrl>
    <Copyright>© 2021-2022 Oleg Rakhmatulin. All rights reserved.</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <AssemblyName>Portable.System.DateTimeOnly</AssemblyName>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>DateOnly TimeOnly</PackageTags>
    <IncludeSymbols>true</IncludeSymbols>
    <Authors>Oleg Rakhmatulin</Authors>
    <PackageIcon>icon.png</PackageIcon>
    <SignAssembly>True</SignAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <PackageReleaseNotes>- Backported changes for interpolated strings handling that prevent OOM exceptions in case of invalid format strings.
- Backported the changes for helping IDEs to highlight format strings in formatting/parsing methods correctly.</PackageReleaseNotes>
    <AssemblyVersion>6.0.2.1</AssemblyVersion>
    <FileVersion>6.0.2.1</FileVersion>
    <Version>6.0.2</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net6'">
    <DebugSymbols>false</DebugSymbols>
    <DebugType>None</DebugType>
  </PropertyGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net4')) OR '$(TargetFramework)' == 'netstandard20'">
    <PackageReference Include="System.Memory" Version="4.5.4" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
    <PackageReference Include="Microsoft.DotNet.Analyzers.Compatibility" Version="0.2.12-alpha">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\Strings.Designer.cs">
      <DependentUpon>Strings.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
    <EmbeddedResource Update="Resources\Strings.resx">
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
       <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Icon.png" Pack="true" PackagePath="icon.png" />
    <None Include="..\README.md" Pack="true" PackagePath="\" />
    <None Remove="DateTimeOnly.csproj.DotSettings" />
  </ItemGroup>

</Project>
